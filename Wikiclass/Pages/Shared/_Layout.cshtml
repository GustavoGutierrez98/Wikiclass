<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wikiclass</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Wikiclass.styles.css" asp-append-version="true" />
</head>
<style> 
    .color1{
    background-color:#2FB320;
    font-size:20px;
    }
</style>
<body class="color2">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3 color1">
            <div class="container color1">
                <div class="card color1" style="width:6cm height:8cm">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Wikiclass</a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
                data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <div class="card color1" style="width:6cm">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="card color1" style="width:6cm">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="card color1" style="width:6cm">
                            <a class="nav-link text-dark" asp-area="" asp-page="Categorias/Index">Categorias</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="card color1" style="width:6cm">
                            <a class="nav-link text-dark" asp-area="" asp-page="Posts/Index">Posts</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="card color1" style="width:6cm">
                            <a class="nav-link text-dark" asp-area="" asp-page="Tags/Index">Tags</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <style>
        .color2{
            background-color:#48EA56;
        }
       
    </style>
    <div class="container color2" >
        <main role="main" class="pb-3 color2">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted color1">
        <div class="container color1">
            &copy; 2022 - Wikiclass - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>